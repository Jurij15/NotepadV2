<Window x:Class="NotepadV2.Windows.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotepadV2.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="App Statistic" Height="320" Width="594" ResizeMode="NoResize" Closing="Window_Closing"
                         xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True">
    <Grid>
        <ListBox x:Name="AllStatsBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,33,0,0"/>
        <Button Content="Details" x:Name="DetailsBtn" Click="DetailsBtn_Click" Margin="0,1,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="594"/>
    </Grid>
</Window>
